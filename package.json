{
  "name": "oriental-wing-chun",
  "author": "Giovani Franz e Iago Paz",
  "description": "Oriental Wing Chun",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "preview": "vite preview",
    "lint": "eslint \"{src,data}/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "format": "prettier --write \"{src,data}/**/*.{ts,tsx}\"",
    "clean": "rimraf dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@highlandertech/eslint-config": "^2.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.25",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vite": "^3.2.10",
    "vite-plugin-eslint": "^1.7.0",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
